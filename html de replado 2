    <!-- Slick js -->
    <script src="js/jquery-3.3.1.min.js"></script>
    <script type="text/javascript" src="components/slick/slick.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function () {
        $('.carousel').slick({
          slidesToShow: 6
          , dots: false
          , centerMode: false
          , arrows: false
          , autoplay: false,
          responsive: [
            {
              breakpoint: 480,
              settings: {
                slidesToShow: 6,
                slidesToScroll: 1
              }
            }
          ]
        });
      

        // scroll show goTop
          var bodyClass = document.body.classList;
          window.addEventListener('scroll', function(){
            var top = this.scrollY;
            if( top < 500 ) {
              bodyClass.remove('showGoTop');
            }else{
              bodyClass.add('showGoTop');
            }
          });

          // goTop
          $('.go-top').on('click', function(){
            $('html, body').animate({'scrollTop': 0});
          });

          $( ".card-img-top" ).click(function() {
            $( ".wrapperUser" ).toggleClass( "clickActive" );
            $( ".personalInformation" ).toggleClass( "clickActiveInformation" );
            $( ".btnFollow" ).toggleClass("btnInerActive");
            $( ".slick-slide .wrapperUser" ).toggleClass("hideOtherImg");
            $( ".containerThingsUser" ).toggleClass("ThingsUserActive");
            $( ".boxSlide" ).toggleClass("boxSlideActive");
            //$(".personalInformation").animate({right:"-12px"},3000);

            //$("#User1").animate({
              //    position: "absolute",
                //  right: "64%"
              //}, 1000);

            //$('.personalInformation').animate({
              //    right:"-12px"
             // }, 1000);

          });

          $('.carousel').on('swipe', function(event, slick, direction){
              console.log(direction);
              // left
              if (direction == 'left'){
                console.log("salio left");
                $(".itemAnimation").removeClass("fadeLeft fadeRight");
                $( ".itemAnimation" ).toggleClass( "fadeRight" );
              }  else if (direction == 'right'){
                console.log("salio right");
                $(".itemAnimation").removeClass("fadeLeft fadeRight");
                $( ".itemAnimation" ).toggleClass( "fadeLeft" );
              }

            });
      });
 
         
    </script>
    <!-- Bootstrap core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

